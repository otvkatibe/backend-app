{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "verbatimModuleSyntax": false,
    "outDir": "dist",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    /* File Layout */
    // "rootDir": "src" 
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts",
    "tests/**/*",
    "prisma.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}